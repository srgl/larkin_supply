.modal-header
  button.close aria-label="Close" data-dismiss="modal" type="button"
    span aria-hidden="true" Ã—
  h4.modal-title Select orders
.modal-body
  .grid
    table.table.table-striped
      thead
        tr
          th
          th Order
          th Delivery&nbsp;Date
          th Delivery&nbsp;Shift
          th Destination&nbsp;Address
          th Volume
          th
      tbody
        - @orders.each do |order|
          tr
            td
              input.select-checkbox type="checkbox" value="#{order.id}"
            td == link_to order_title(order), order_path(order)
            td = order.delivery_date
            td = order.delivery_shift
            td = order.destination_address
            td = order.volume

.modal-footer
  button.btn.btn-default data-dismiss="modal" type="button" Cancel
  button.btn.btn-primary.btn-ok type="button" Select
